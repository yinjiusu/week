page {
  background: #fff;
}
.items {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 10rpx 10rpx 20rpx;
  border-bottom: 1px solid #ccc;
  position: relative;
}
.item view:nth-of-type(1) {
  color: #666;
  margin-bottom: 20rpx;
}
.item view:nth-of-type(2) {
  color: #21B97A;
  font-size: 14px;
  margin-bottom: 20rpx;
}
.item view:nth-of-type(3) {
  color: #666;
  font-size: 14px;
  margin-bottom: 20rpx;
}
.calltel{
  position: absolute;
  right: 10rpx;
  top: 45rpx;
  font-size: 14px;
  border: 1px solid #21B97A;
  padding: 12rpx 20rpx;
  color: #21B97A;
  border-radius: 5px;
}