/* @import "/wxParse/wxParse.wxss"; */

page{
  background: #fff;
}
/* 标题 */
.title{
  font-size: 16px;
  font-weight: bold;
  padding: 10rpx;
}
.img{
  /* margin: 0 auto; */
  width: 98%;
  height: 30%;
}
.date{
  margin-top: 10rpx;
  font-size: 14px;
  color: #a4a4a4;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #a4a4a4;
  padding: 10rpx;
}
.body{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding: 10rpx;
}

/* 推荐房源 */
.recommend-title{
  font-size: 22px;
  font-weight: bold;
}
.recommend-list {
  border-top: 1px solid #cccccc;
  display: flex;
  padding: 10rpx;
}
.recommend-list image {
  width: 350rpx;
  height: 250rpx;
}

.recommend-list-item {
  margin-left: 6rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.recommend-list-item-spec {
  color: #ccc;
  font-size: 14px;
}
.recommend-list-item-tag text{
  margin: 6rpx;
}
.recommend-list-item-price {
  color: red;
}
.recommend-list-item-price text{
  font-weight: bold;
}

.tag1{
  padding: 10rpx;
  background: #C5EDDC;
  color: #5ECC9F;
  font-size: 12px;
  border-radius: 5px;
}
.tag2{
  padding: 10rpx;
  background: #C3EBF0;
  color: #39BECD;
  font-size: 12px;
  border-radius: 5px;
}
.tag3{
  padding: 10rpx;
  background: #CDE6FE;
  color: #5AABFD;
  font-size: 12px;
  border-radius: 5px;
}
/* 回到顶部 */
.gototop{
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
  color: #ccc;
}
.font30{
  font-size: 40px;
}
/* 底部菜单 */
.footer-menu{
  width: 100%;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  color: #999999;
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0px;
  margin: 0px;
  font-size: 14px;
}
.footer-menu view:nth-of-type(1){
  /* margin-left: 30rpx; */
  border: none;
  padding: 0;
  border-right: 1px solid #999;
}
.footer-menu view{
  width: 50%;
  border-left: 1px solid #999;
  text-align: center;
}
